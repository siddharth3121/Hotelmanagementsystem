@model Hotelmanagementsystem.Models.Adminmodel
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        Hotelmanagementsystem
    </title>
    <style>
        .Image {
            background-image: url('../../Images/image2.jpg');
        }
    </style>
</head>
<body class="Image">
    @using (@Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        <div class="col-10 offset-3" style="margin-top:18em">
            <div class="row mb-2">
                <label class="col-2 font-weight-bold text-white">
                    Username :
                </label>
                @Html.TextBoxFor(m => m.vusername, "", new { @class = "col-3 form-control", placeholder = "Please Enter Username" })
                @Html.ValidationMessageFor(m => m.vusername, "", new { @class = "text-white" })
            </div>
            <div class="row">
                <label class="col-2 font-weight-bold text-white">
                    Password :
                </label>
                @Html.TextBoxFor(m => m.vpassword, "", new { @class = "col-3 form-control", placeholder = "Please Enter Password", Type = "Password" })
                @Html.ValidationMessageFor(m => m.vpassword, "", new { @class = "text-white" })
            </div>
            <button class="mt-3 offset-2  btn btn-primary rounded" type="submit">Login</button>
            @*<div class="row">
                    @Html.TextBoxFor(m => m.vregorloginflag, "", new { @Value = "L", type = "hidden" })
                </div>*@
        </div>
    }

    @section scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>

